<h1> Candidatos registrados en el sistema </h1>

<div class="spacer-5"></div>

<div class="row header">
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"> Codigo IIRSME </div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"> Nombre(s) </div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"> Apellidos </div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"> Edad </div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"> Sexo </div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"> Telefono </div>
  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1"></div>
</div>


<% if @people.length > 0 %>

<% @people.each_with_index do |person, idx| %>
  <% if (idx % 2 == 0) %>
    <div class="row content-even">
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.code %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"><%= person.firstname %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 "><%= person.lastname %></div>
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.age %></div>
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.gender %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 row-center"><%= person.phone %></div>
	  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Editar", edit_person_path(person.id), { method: "put" } %></div>
	  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Eliminar", person, method: :delete, data: { confirm: "¿Estas seguro que quieres eliminar este candidato?" } %></div>
	</div>
  <% else %>
	<div class="row content-odd">
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.code %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"><%= person.firstname %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 "><%= person.lastname %></div>
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.age %></div>
	  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= person.gender %></div>
	  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 row-center"><%= person.phone %></div>
	  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Editar", edit_person_path(person.id), { method: "put" } %></div>
	  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Eliminar", person, method: :delete, data: { confirm: "¿Estas seguro que quieres eliminar este candidato?" } %></div>
	</div>
  <% end %>
<% end %>

<div class="row footer">
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"></div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"></div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"></div>
  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.1 col-sm-1 col-md-1 col-lg-1"></div>
</div>

<% else %>

  <div class="col-lg-12 row-center"><h4>No hay candidatos registrados aún...</h4></div>
  
<% end %>
 
<div class="spacer-5"></div>

<%= link_to "Nuevo Candidato", new_person_path, { class: "btn btn-primary"} %>
