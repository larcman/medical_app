<h1> Detalles del Paciente </h1>

<div class="spacer-5"></div>

<h3> Datos generales </h3>

<div class="form-horizontal">
  <%= form_for(@patient) do |f| %>

    <b>Codigo <%= @research.code %></b>
    <%= f.text_field :code, class: 'form-control' %>
    
    <b>Candidato&nbsp;</b> <%= link_to "(Editar)", edit_person_path(@patient.person.id) %>
    <%= f.collection_select :person_id, @people, :id, :firstname, {:include_blank => false}, {:class => 'form-control'} %>

    <div class="spacer-5"></div>
    
    <%= f.submit "Guardar", class: "btn btn-primary" %>   
    <%= link_to "Atras", research_path(@research.id), class: "btn btn-primary" %>
  <% end %>
</div>

<div class="spacer-5"></div>
<div class="spacer-5"></div>

<h3> Visitas </h3>

<div class="spacer-5"></div>

<div class="form-inline">
  <%= form_for(@appointment) do |f| %>
    <b>Dia</b>
    <%= f.date_field :day, class: 'form-control' %>
      
    <b>Hora</b>
    <%= f.time_field :starttime, class: 'form-control' %>      

    <b>Status</b>
    <%= f.select :status, ['Agendada', 'Completada', 'Cancelada'], {:include_blank => false}, {:class => 'form-control'} %>

    <%= f.hidden_field :patient_id, :value => @patient.id %>
    <%= f.hidden_field :quick_creation, :value => true %>
    <%= f.submit "Agregar Visita", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="spacer-5"></div>

<div class="row header">
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"> Visita </div>
  <div class="col-xs-.2 col-sm-2 col-md-1 col-lg-1"> Dia </div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"> Hora </div>  
  <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"> Status </div>
  <div class="col-xs-.4 col-sm-4 col-md-4 col-lg-4"> Comentarios </div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>  
  <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
</div>

<% if @appointments.length > 0 %>
  
  <% @appointments.each_with_index do |appt, idx| %>
    <% if (idx % 2 == 0) %>
      <div class="row content-even">
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= idx + 1 %></div>      	
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= appt.day.strftime("%d/%m/%Y") %></div>
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= appt.starttime.strftime("%I:%M %p") %></div>  
        <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 row-center"><%= appt.status %></div>
        <div class="col-xs-.4 col-sm-4 col-md-4 col-lg-4"><%= appt.comments %></div>
	    <% if appt.evaluation %>
	      <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Evaluación", edit_evaluation_path(appt.evaluation.id) %></div>
	    <% else %>
          <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"></div>
	    <% end %>        
	    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Ver", edit_appointment_path(appt.id) %></div>
	    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Eliminar", appt, method: :delete, data: { confirm: "¿Estas seguro que quieres eliminar esta visita?" } %></div>	    
	  </div>
    <% else %>
      <div class="row content-odd">
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= idx + 1 %></div>      	
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= appt.day.strftime("%d/%m/%Y")%></div>
        <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= appt.starttime.strftime("%I:%M %p") %></div>
        <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2 row-center"><%= appt.status %></div>
        <div class="col-xs-.4 col-sm-4 col-md-4 col-lg-4"><%= appt.comments %></div>
	    <% if appt.evaluation %>
	      <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Evaluación", edit_evaluation_path(appt.evaluation.id) %></div>
	    <% else %>
          <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"></div>
	    <% end %>        
	    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Ver", edit_appointment_path(appt.id) %></div>
	    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1 row-center"><%= link_to "Eliminar", appt, method: :delete, data: { confirm: "¿Estas seguro que quieres eliminar esta visita?" } %></div>	    
	  </div>
    <% end %>
  <% end %>

  <div class="row footer">
    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>  
    <div class="col-xs-.3 col-sm-2 col-md-2 col-lg-2"></div>
    <div class="col-xs-.4 col-sm-4 col-md-4 col-lg-4"></div>
    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-xs-.2 col-sm-1 col-md-1 col-lg-1"></div>
  </div>

<% else %>

  <div class="col-lg-12 row-center"><h4>No hay visitas registradas aún...</h4></div>
  
<% end %>