<div class="container signin-container">

  <h2 class="form-signin-heading">Iniciar Sesión</h2>

  <%= form_for(:session, url: login_path, class: "form-signin") do |f| %>
    <%= f.text_field :username, :placeholder => "Usuario", :class => 'form-control' %>
    <%= f.password_field :password, :placeholder => "Contraseña", :class => 'form-control' %>
	<div class="spacer-10"></div>
    <%= f.submit "Acceder", :class => "btn btn-lg btn-primary btn-block" %>
  <% end %>